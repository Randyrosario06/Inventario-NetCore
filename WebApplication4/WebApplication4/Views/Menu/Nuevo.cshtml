@using WebApplication4.Models
@model Comidas

@{ 
    ViewData["Title"] = "Agregar nuevo";
}

<div class="container-fluid text-center">
    <div>
        <h1>Agregar nuevo plato</h1>
    </div>
    <div>
        <form method="post" >
            <div class="form-group-lg">
                <div>
                    <label></label>
                </div>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre del plato"/>
                <span asp-validation-for="Nombre"></span>
            </div>
            <div class="form-group-lg">
                <div>
                    <label></label>
                </div>
                <textarea asp-for="Descripcion" class="form-control" placeholder="Descripcion"></textarea>
            </div>
            <div class="form-group-lg">
                <div >
                    <label></label>
                </div>
                <input asp-for="Precio" class="form-control" placeholder="Precio"/>
                <span asp-validation-for="Precio"></span>
            </div>
            <div class="form-group-lg">
                <div>
                    <label></label>
                </div>
                <select asp-for="Platos" asp-items="@Html.GetEnumSelectList<TiposPlatos>()" class="form-control"></select>
            </div>
            <div>
                <label>

                </label>
            </div>
            <div>
                <input type="submit" name="save" value="Save" class="btn-lg btn-default form-control"/>
            </div>
        </form>
    </div>

</div>
